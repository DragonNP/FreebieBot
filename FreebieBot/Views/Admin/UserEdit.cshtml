@using FreebieBot.Models.Users
@model FreebieBot.Models.Users.User
@{
    ViewBag.Title = "Edit user";
}
<form asp-action="UserEdit" asp-controller="Admin" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Id" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="TelegramId" class="col-sm-2 col-form-label">Telegram ID</label>
        <div class="col-sm-10">
            <input type="number" asp-for="TelegramId" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Lang" class="col-sm-2 col-form-label">Language</label>
        <div class="col-sm-10">
            <select type="dropdown" asp-for="Lang" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<UserLang>()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SubPikabu" class="col-sm-2 col-form-label">Subscribe on Pikabu</label>
        <div class="col-sm-10">
            <select type="dropdown" asp-for="SubPikabu" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<UserSub>()"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Role" class="col-sm-2 col-form-label">User Role</label>
        <div class="col-sm-10">
            <select type="dropdown" asp-for="Role" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<UserRole>()"></select>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-info">Update</button>
            <a asp-action="Users" class="btn btn-outline-info">Cancel</a>
        </div>
    </div>
</form>